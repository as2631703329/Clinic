<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.jinzhu.cli.medicine.mapper.hos.DrugCateMapper">

    <!--查询所有药品分类处方类型id查询所有药品分类-->
    <select id="getAllDrugCateByprescriTypeId" resultType="cn.jinzhu.cli.medicine.entity.hos.DrugCate">
        SELECT * FROM `hos_drug_cate`
            <if test="prescriType.id != 0 and prescriType.id != '' and prescriType.id != null">
              where  prescri_type=#{prescriType.id}
            </if>
    </select>


</mapper>